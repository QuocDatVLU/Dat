@model IEnumerable<quyettien.Models.BangSanPham>

@{
    ViewBag.Title = "Index";
}

<h2>BẢNG SẢN PHAM</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create</a>
</p>
@*<table class="table">*@
    <table id="bangsanpham" class="table-hover">
        <thead>
            <tr>
                <th>
                    Mã sản phẩm
                </th>
                <th>
                    tên sản phẩm
                </th>
                <th>
                    giá bán
                </th>
                <th>
                    giá Gốc
                </th>
                <th>
                    giá góp
                </th>
                <th>
                    số lương tồn
                </th>
                <th>
                    tên loại
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaSP</td>
            <td>
                @item.TenSP
            </td>
            <td>
                @item.GiaBan.ToString("N0")
            </td>
            <td>
                @item.GiaGoc.ToString("N0")
            </td>
            <td>
                @item.GiaGop.ToString("N0")
            </td>
            <td>
                @item.SoLuongTon.ToString("N0")
            </td>
            <td>
                @item.LoaiSanPham.TenLoai
            </td>
            <td>
               <a title="Sửa" href="@Url.Action("Edit", new{ id = item.id})">
                       <span class="glyphicon glyphicon-pencil"></span>
        </a>
                <a href="@Url.Action("Detail", new{ id = item.id})">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
               <a href="@Url.Action("Delete", new { id = item.id})">
                   <span class="glyphicon glyphicon-trash"></span>
               </a>
            </td>
        </tr>
    }
            </tbody>
</table>

@section scripts{
<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
 <script>
        $(document).ready(function () {
            $('#bangsanpham').DataTable();
        });
    </script>
}